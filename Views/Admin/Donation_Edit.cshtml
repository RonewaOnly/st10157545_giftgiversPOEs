@model st10157545_giftgiversPOEs.Models.DonationViewModel

@{
    ViewData["Title"] = "Edit Donation";
}

<h1>Edit Donation</h1>
<form asp-action="Donation_Edit" method="post">
    <div class="form-group">
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ItemCategory"></label>
        <input asp-for="ItemCategory" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ItemQuantity"></label>
        <input asp-for="ItemQuantity" class="form-control" type="number" />
        <span asp-validation-for="ItemQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DonationDate"></label>
        <input asp-for="DonationDate" class="form-control" type="date" />
        <span asp-validation-for="DonationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CashAmount"></label>
        <input asp-for="CashAmount" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="FullNameDonator"></label>
        <input asp-for="FullNameDonator" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AdminId"></label>
        <select asp-for="AdminId" class="form-control" asp-items="Model.AdminList">
            <option value="">Select an Admin</option>
        </select>
        <span asp-validation-for="AdminId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Donation</button>
</form>
