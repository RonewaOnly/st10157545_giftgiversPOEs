@model IEnumerable<st10157545_giftgiversPOEs.Models.ReliefProject>

 @{
    ViewData["Title"] = "Disaster Response Management";
}


<h2>Disaster Response Projects</h2>

<p>
    <a asp-action="CreateReliefProject" class="btn btn-primary">Create New Project</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Affected Area</th>
            <th>Team Leader</th>
            <th>Start Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.projectName</td>
                <td>@item.affectedArea</td>
                <td>@item.teamLeader</td>
                <td>@item.startDate.ToShortDateString()</td>
                <td>
                    <a asp-action="EditReliefProject" asp-route-id="@item.relief_id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="AssignTeam" asp-route-id="@item.relief_id" class="btn btn-sm btn-info">Assign Team</a>
                    <form asp-action="DeleteReliefProject" asp-route-id="@item.relief_id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this project?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>