@model st10157545_giftgiversPOEs.Models.Donation

@{
    ViewData["Title"] = "Assign Donation";
}

<h1>Assign Donation</h1>
<form asp-action="Donation_Assign" method="post">
    <div class="form-group">
        <label for="event_id">Event</label>
        <select asp-for="event_id" class="form-control" name="eventId">
            <!-- Ensure proper binding -->
            <option value="">Select Event</option>
            @foreach (var ev in ViewBag.Events)
            {
                <option value="@ev.Value">@ev.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="volunteer_id">Volunteer</label>
        <select asp-for="volunteer_id" class="form-control" name="volunteerId">
            <!-- Ensure proper binding -->
            <option value="">Select Volunteer</option>
            @foreach (var vol in ViewBag.Volunteers)
            {
                <option value="@vol.Value">@vol.Text</option>
            }
        </select>
    </div>
    <input type="hidden" name="id" value="@Model.donation_id" />
    <button type="submit" class="btn btn-success">Assign</button>
</form>
