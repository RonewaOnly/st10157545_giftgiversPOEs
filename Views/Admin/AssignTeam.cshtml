@model st10157545_giftgiversPOEs.Models.ReliefProject

<h2>Assign Team for @Model.projectName</h2>
<!-- Ensure that relief_id is passed correctly -->
<form asp-action="AssignTeam" asp-route-id="@Model.relief_id" method="post">
    <input type="hidden" asp-for="relief_id" />
    <div class="form-group">
        <label for="teamLeader">Team Leader</label>
        <select id="teamLeader" name="teamLeader" class="form-control">
            @foreach (var volunteer in ViewBag.Volunteers)
            {
                <option value="@volunteer.firstname @volunteer.lastname">@volunteer.firstname @volunteer.lastname</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Team Members</label>
        @for (int i = 0; i < ViewBag.Volunteers.Count; i++)
        {
            var volunteer = ViewBag.Volunteers[i];
            <div class="form-check">
                <input type="checkbox" name="teamMembers" value="@volunteer.volunteer_id" class="form-check-input" id="volunteer-@i" />
                <label class="form-check-label" for="volunteer-@i">@volunteer.firstname @volunteer.lastname</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Assign Team</button>
</form>
