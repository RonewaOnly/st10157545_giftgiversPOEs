@model st10157545_giftgiversPOEs.Models.Volunteers;
@{
    ViewData["Title"] = "Delete Volunteer";
}

<h1>Delete Volunteer</h1>

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> Are you sure you want to delete this volunteer?
</div>

<div>
    <p><strong>Name:</strong> @Model.firstname @Model.lastname</p>
    <p><strong>Email:</strong> @Model.email</p>
    <form asp-action="Volunteer_Delete" method="post">
        <input type="hidden" asp-for="volunteer_id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Volunteers", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
