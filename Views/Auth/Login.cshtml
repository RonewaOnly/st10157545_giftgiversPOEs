@model st10157545_giftgiversPOEs.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<form asp-action="Login" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="UsernameOrEmail" class="control-label"></label>
        <input asp-for="UsernameOrEmail" class="form-control" />
        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>
</form>
<a asp-controller="Auth" asp-action="Register">Register here</a>
