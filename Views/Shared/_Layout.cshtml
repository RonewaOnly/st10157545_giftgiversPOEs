

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10157545_GIFTGIVERS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10157545_GIFTGIVERS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ST10157545_GIFTGIVERS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.HasClaim("UserType", UserType.User.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Donations">Donations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Report">Report Here</a>
                            </li>

                            @* <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" asp-area="" asp-controller="Home" asp-action="Privacy" data-bs-toggle="dropdown" aria-expanded="false">Events</a>

                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item active" asp-area="" asp-controller="Home" asp-action="Privacy">Current Appeals</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Current News</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Past Appleats</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Fund raisers </a></li>
                                </ul>
                            </li> *@
                        }else if(User.HasClaim("UserType", UserType.Admin.ToString())){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Reports">Report Panel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Events">Event Panel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Volunteers">Volunteer Panel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Donations">Donation Panel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Responses">
                                    Disaster Response
                                </a>
                            </li>
                        }
                        else if (User.HasClaim("UserType", UserType.Volunteer.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Volunteer" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Volunteer" asp-action="Events">Event</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Volunteer" asp-action="Tasks">Task</a>
                            </li>
@*                             <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Volunteer" asp-action="News" disabled>News</a>
                            </li> *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Volunteer" asp-action="Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Volunteer" asp-action="Notifications">Notifications</a>
                            </li>
                        }
                        else

                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Donations">Donations</a>
                            </li>

                        }
                    </ul>
                </div>

                <div>
                   
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.HasClaim("IsAnonymous", "true"))
                        {
                            <span>Welcome, Anonymous User!</span>
                            <a asp-controller="Auth" asp-action="Register">Register</a>
                            <a asp-controller="Auth" asp-action="Login">Login</a>
                        }
                        else
                        {
                            <span>
                                Welcome, @User.Identity.Name!                         
                            </span>
                            <form asp-controller="Auth" asp-action="Logout" method="post">
                                <button type="submit">Logout</button>
                            </form>
                        }
                    }
                    else
                    {
                        <a asp-controller="Anonymous" asp-action="AccessAsAnonymous">Access as Anonymous</a>
                        <a asp-controller="Auth" asp-action="Register">Register</a>
                        <a asp-controller="Auth" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">

            <div class="contact-info">
                <p>SA - NATIONAL CALL CENTRE</p>
                <p>Toll Free Number: 0800 786 911</p>
                <p>Email: info@giftofthegivers.org</p>
            </div>

            <div class="newsletter">
                <p>SUBSCRIBE TO OUR NEWSLETTER</p>
                <form>
                    <input type="email" placeholder="email" required>
                    <button type="submit">SUBSCRIBE</button>
                </form>
            </div>

            <p>&copy; 2024 Gift of the Givers Foundation. All Rights Reserved.</p>
            <p>Terms & Conditions | Designed by Assegai & Javelin, developed by DGTL-FUSION</p>

            &copy; 2024 - ST10157545_GIFTGIVERS 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>   
</html>
