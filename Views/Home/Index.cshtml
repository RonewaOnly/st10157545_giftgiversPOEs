<!--CSS code-->
<style>
    .statistics-section {
        display: flex ;
        flex-direction: row;
        text-align: center;
        justify-content: space-evenly;
        align-items:center;
        padding: 40px;
        background-color: #f5f5f5;
    }

        .statistics-section h1 {
            font-size: 48px;
            margin: 10px;
        }
        .stats{
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
            align-items: center;
        }
        .stats h1, .stats h2{
            color: darkgreen;
        }


    .slider-container {
        position: relative;
        width: 100%;
        height: 300px;
        overflow: hidden;
        background: linear-gradient(to right, wheat, #E8B86D);
        border-radius: 10px;
    }
    .impact-section{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-evenly;
        align-content:  center;
    }
    .impact-section .impact {
