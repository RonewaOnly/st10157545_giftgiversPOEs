        margin: 20px;
    }

    .impact-section img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
    }

    .impact-section p {
        margin-top: 10px;
        font-weight: bold;
    }


    .slider {
        display: flex;
        width: 300%;
        height: 100%;
        transition: transform 0.5s ease-in-out;
    }

    .slide {
        width: 33.33%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        padding: 20px;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }
    .silde-back{
        background-image: url("/DefaultImages/bad_situation1.jpeg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .silde-back:nth-child(1){
            background-image: url("/DefaultImages/bad_situation1.jpeg");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
    }

        .silde-back:nth-child(2) {
            background-image: url("/DefaultImages/bad_situation2.jpeg");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .silde-back:nth-child(3) {
            background-image: url("/DefaultImages/bad_situation3.jpeg");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .slide.active {
            opacity: 1;
        }

    .message {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .cta-button {
        padding: 10px 20px;
        background-color: white;
        color: #4a00e0;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .cta-button:hover {
            background-color: #f0f0f0;
        }

    .prev, .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(255, 255, 255, 0.3);
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        font-size: 18px;
        border-radius: 50%;
    }

    .prev {
        left: 10px;
    }

    .next {
        right: 10px;
    }

    .primary-goals {
        text-align: center;
        margin: 20px 0;
    }

    .goal-cards {
        display: flex;
        justify-content: space-evenly;
        margin: 20px;
    }

    .goal-card {
        width: 200px;
        padding: 10px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 8px;
        cursor: pointer;
    }

        .goal-card img {
            width: 100%;
            height: 400px;
            border-radius: 8px;
            image-resolution: from-image;
        }

        .goal-card p {
            margin-top: 10px;
            font-weight: bold;
        }

    .goal-cards a {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .goal-card {
        transition: transform 0.3s ease;
    }

        .goal-card:hover {
            transform: scale(1.05);
        }
</style>
